<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            /* background-color: #060E0C; */
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #ffffff;
        }

        .reset-container {
            /* background: rgba(6, 14, 12, 0.9); */
            background: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 255, 170, 0.1);
            width: 100%;
            max-width: 400px;
        }

        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #16A34A;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #1d1f20;
            font-weight: 500;
        }

        input[type="password"] {
            width: 100%;
            padding: 0.8rem;
            /* background: #0F172A; */
            border: 1px solid #1E293B;
            border-radius: 5px;
            /* color: #ffffff; */
            color: black;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input[type="password"]:focus {
            outline: none;
            border-color: #16A34A;
        }

        button {
            width: 100%;
            padding: 1rem;
            background: #16A34A;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        button:hover {
            background: #15803D;
        }

        .password-requirements {
            color: #94A3B8;
            font-size: 0.875rem;
            margin: 0.5rem 0;
        }

        .error-message {
            color: #dc2626;
            margin-top: 0.5rem;
            display: none;
        }

        .success-message {
            color: #16A34A;
            text-align: center;
            margin-top: 1rem;
            display: none;
        }

        .login-link {
            text-align: center;
            margin-top: 1.5rem;
        }

        .login-link a {
            color: #16A34A;
            text-decoration: underline;
            transition: color 0.3s ease;
        }

        .login-link a:hover {
            color: #16A34A;
            text-decoration: underline;
        }

        @media (max-width: 480px) {
            .reset-container {
                margin: 1rem;
                padding: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <div class="reset-container">
        <h1>Set New Password</h1>
        <form action="/api/v1/users/change-password" method="post" id="resetForm">
            <input type="hidden" id="resetToken" name="token" value="<%= token %>">

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input name="new_password" type="password" id="newPassword" required>
                <div class="password-requirements">
                    Must be at least 6 characters
                </div>
                <div class="error-message" id="passwordError">
                    Password must be at least 6 characters
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" required>
                <div class="error-message" id="confirmError">
                    Passwords do not match
                </div>
            </div>

            <button type="submit">Reset Password</button>
            <div class="success-message" id="successMessage">
                Password reset successfully!
            </div>
        </form>

        <div class="login-link">
            <a href="<%= loginPageLink %>">‚Üê Back to Login</a>
        </div>
    </div>

    <script>
        const form = document.getElementById('resetForm');
        const passwordInput = document.getElementById('newPassword');
        const confirmInput = document.getElementById('confirmPassword');
        const passwordError = document.getElementById('passwordError');
        const confirmError = document.getElementById('confirmError');
        const successMessage = document.getElementById('successMessage');

        form.addEventListener('submit', function (e) {
            e.preventDefault();
            let isValid = true;

            // Clear previous errors
            passwordError.style.display = 'none';
            confirmError.style.display = 'none';

            // Password validation
            if (passwordInput.value.length < 6) {
                passwordError.style.display = 'block';
                isValid = false;
            }

            // Confirm password validation
            if (passwordInput.value !== confirmInput.value) {
                confirmError.style.display = 'block';
                isValid = false;
            }

            if (isValid) {
                // Simulate API call
                // successMessage.style.display = 'block';
                // passwordInput.value = '';
                // confirmInput.value = '';

                // setTimeout(() => {
                //     successMessage.style.display = 'none';
                //     alert('Password has been reset successfully!');
                //     // window.location.href = '/login'; // Redirect to login
                // }, 2000);
                this.submit();
            }
        });

        // Real-time password match check
        confirmInput.addEventListener('input', function () {
            if (passwordInput.value !== confirmInput.value) {
                confirmError.style.display = 'block';
            } else {
                confirmError.style.display = 'none';
            }
        });
    </script>
</body>

</html>